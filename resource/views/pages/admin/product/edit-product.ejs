<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-wrapper-before"></div>
        <div class="content-header row">
            <div class="content-header-left col-md-4 col-12 mb-2">
                <h3 class="content-header-title">بخش محصولات</h3>
            </div>
            <div class="content-header-right col-md-8 col-12">
                <div class="breadcrumbs-top float-md-right">
                    <div class="breadcrumb-wrapper mr-1">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin">خانه</a>
                            </li>
                            <li class="breadcrumb-item"><a href="/admin/product">لیست محصولات</a>
                            </li>
                            <li class="breadcrumb-item active"><a href="/admin/product/add">ویرایش محصول</a>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Basic form layout section start -->
            <section id="basic-form-layouts">
                <div class="row match-height">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title" id="basic-layout-form">لیست محصولات</h4>
                                <a class="heading-elements-toggle">
                                    <i class="la la-ellipsis-v font-medium-3"></i>
                                </a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li>
                                            <a data-action="collapse">
                                                <i class="ft-minus"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="reload">
                                                <i class="ft-rotate-cw"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="expand">
                                                <i class="ft-maximize"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="close">
                                                <i class="ft-x"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <div class="card-text">
                                        <p>تمامی فیلد هارا به درستی و با دقت پر کنید</p>
                                    </div>
                                    
                                    <form class="form" method="post" action="/admin/product/update/<%=product._id%>"
                                        enctype="application/x-www-form-urlencoded">
                                        <input type="hidden" name="category" value="<%=product.category%>">
                                        <div class="form-body">
                                            <h4 class="form-section">
                                                <i class="ft-flag"></i> اطلاعات محصول</h4>
                                            <div class="form-group">
                                                <label for="companyName">نام محصول</label>
                                                <input type="text" id="companyName" class="form-control"
                                                    placeholder="نام محصول" name="title" value="<%=product.title%>">
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="companyinput1">شماره سریال</label>
                                                        <input type="text" value="<%=product.serialNumber%>" id="companyinput1" class="form-control"
                                                            placeholder="شماره سریال" name="serialnumber">
                                                    </div>
                                                </div>
    
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="companyinput1">تخفیف محصول به درصد</label>
                                                        <input type="text" name="off" value="<%=product.off%>"
                                                            class="form-control percentage-inputmask"
                                                            id="percentage-mask" placeholder="مقدار را در٪ وارد کنید">
                                                    </div>
                                                </div>
                                            </div>
                                        <%if(product.category == "filter"){%>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="companyinput1">تعداد موجود در انبار</label>
                                                        <input type="number" id="companyinput1" class="form-control" value="<%=product.count%>"
                                                            placeholder="تعداد موجود در انبار " name="count">
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="companyinput1">مناسب برای</label>
                                                        <input type="text" name="cars" class="form-control " value="<%=product.cars%>"
                                                            id="companyinput1" placeholder="پراید - پژو 405 - پرادو - ....">
                                                    </div>
                                                </div>        
                                            </div>
                                        <%}%>
                                            <%if(product.category == "stock"){%>
                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <div class="form-group">
                                                            <label for="companyinput1">طول</label>
                                                            <input type="number" id="companyinput1" class="form-control" value="<%=product?.sizes?.length%>"
                                                                placeholder="طول " name="length">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-group">
                                                            <label for="companyinput1">وزن</label>
                                                            <input type="number" name="weight" class="form-control" value="<%=product.weight%>"
                                                                id="companyinput1" placeholder="وزن">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-group">
                                                            <label for="companyinput1">ارتفاع</label>
                                                            <input type="number" id="companyinput1" class="form-control" value="<%=product?.sizes?.height%>"
                                                                placeholder="ارتفاع " name="height">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-group">
                                                            <label for="companyinput1">عرض</label> 
                                                            <input type="number" name="width" class="form-control" value="<%=product?.sizes?.width%>"
                                                                id="companyinput1" placeholder="عرض">
                                                        </div>
                                                    </div>
                                                </div>
                                            <%}%>
                                            <div class="row">
                                                <%if(product.category != "stock"){%>
                                                    <%if(product.category == "oil"){%>
                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label for="companyinput1">تعداد موجود در انبار</label>
                                                                <input type="number" id="companyinput1" class="form-control" value="<%=product.count%>"
                                                                    placeholder="تعداد موجود در انبار " name="count">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label for="companyinput1">حجم</label>
                                                        <input type="text" name="volume" class="form-control " value="<%=product.volume%>"
                                                            id="companyinput1" placeholder="حجم">
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="companyinput1">مناسب برای</label>
                                                        <input type="text" name="cars" class="form-control " value="<%=product.cars%>"
                                                            id="companyinput1" placeholder="پراید - پژو 405 - پرادو - ....">
                                                    </div>
                                                </div>
                                                <%}%>
                                               <%}else{%>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="companyinput1">سری ساخت</label>
                                                        <input type="text" name="series" class="form-control " value="<%=product.series%>"
                                                            id="companyinput1" placeholder="سری ساخت">
                                                    </div>
                                                </div>
                                                <%}%>
                                            </div>
                                            <div class="form-group">
                                                <label for="companyinput8">درباره محصول</label>
                                                <textarea id="companyinput8" rows="5" class="form-control" name="text"
                                                    placeholder="درباره محصول"><%=product.text%></textarea>
                                            </div>
                                        </div>
                                        <%if(product.image){%>
                                        <div class="row">
                                            <figure class="col-lg-4 col-md-6 col-sm-6 col-xs-12" itemprop="associatedMedia" itemscope="" itemtype="http://schema.org/ImageObject">
                                                <a href="<%=product.image%>" itemprop="contentUrl" data-size="480x360">
                                                    <img class="img-thumbnail img-fluid" src="<%=product.image%>">
                                              </figure>
                                        </div>
                                        <%}%>
                                        <div class="form-actions">
                                            <a href="/admin/product" class="btn btn-danger mr-1">
                                                <i class="ft-x"></i> برگشت
                                            </a>
                                            <button type="submit" id="insertProductBtn" class="btn btn-primary">
                                                <i class="la la-check-square-o"></i> ذخیره
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <div class="modal fade text-left" id="iconModal" tabindex="-1" role="dialog" aria-labelledby="basicModalLabel2" aria-hidden="true">
        <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h4 class="modal-title" id="basicModalLabel2"><i class="la la-road2"></i>سیستم هشدار</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
            
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-info" data-dismiss="modal">بستن</button>
            </div>
        </div>
        </div>
    </div>
</div>
<script>
    const insertProductBtn = document.querySelector("#insertProductBtn");
    insertProductBtn.addEventListener("click", async (e) => {
        e.preventDefault();
        $(".form").serialize()
        const formData = $(".form").serializeArray()
        const myForm = new FormData();
        const body = {}
        formData.map(field => {
            body[field.name] = field.value
        })
        const result = await (await fetch("http://localhost:5000/admin/product/update/<%=product._id%>", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify(body),
        })).json()
        if (result.status == 400) {
            document.querySelector(".modal-body").innerHTML = Object.keys(result?.messages)?.map(key => (`<span>${result.messages[key]}</span><br/>`)).join("")
            $('#iconModal').modal("show");
        }else{
            document.querySelector(".modal-body").innerHTML = "ویرایش محصول با موفقیت انجام شد"
            $('#iconModal').modal("show");
            // const inputs = (document.querySelectorAll("input")).forEach(input => {
            //     input.value = ""
            // });
            // (document.querySelectorAll("textarea")).forEach(input => {
            //     input.innerHTML = ""
            // });
        }
    });
</script>